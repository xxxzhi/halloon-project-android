<?xml version="1.0" encoding="utf-8"?>
<resources>
    
    <attr name="color" format="color|reference" />
    <attr name="margin" format="dimension" />
    
    <declare-styleable name="HalloonProgressBar" >
        <attr name="maxValue" format="integer" />
        <attr name="minValue" format="integer" />
        <attr name="currentValue" format="float" />
        <attr name="tagHeight" format="dimension" />
        <attr name="heightToTag" format="dimension" />
        <attr name="showTag" format="boolean" />
        <attr name="brightColor" format="color|reference" />
        <attr name="darkColor" format="color|reference" />
    </declare-styleable>
    
    <declare-styleable name="SplitLine">
        <attr name="color" />
        <attr name="margin" />
    </declare-styleable>
    
    <declare-styleable name="TagView">
        <attr name="margin" />
        <attr name="singleHeight" format="dimension" />
    </declare-styleable>
    
</resources>