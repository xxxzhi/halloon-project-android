<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="AppTheme" parent="android:Theme.Holo.Light" />

    <style name="Theme.Halloon" parent="@style/Theme.Sherlock.Light">
        <item name="vpiTabPageIndicatorStyle">@style/HalloonTabPageIndicator</item>
        <item name="android:actionBarStyle">@style/Theme.Halloon.Styled.ActionBar</item>
        <item name="actionBarStyle">@style/Theme.Halloon.Styled.ActionBar</item>
    </style>

    <style name="Theme.Halloon.Styled.ActionBar" parent="Widget.Sherlock.Light.ActionBar.Solid.Inverse">
        <item name="icon">@drawable/ic_launcher</item>
        <item name="android:icon">@drawable/ic_launcher</item>
        <item name="background">#568ee2</item>
        <item name="android:background">#568ee2</item>
    </style>

    <style name="HalloonTabPageIndicator" parent="Widget.TabPageIndicator">
        <item name="android:background">@drawable/custom_tab_indicator</item>
        <item name="android:textAppearance">@style/CustomTabPageIndicator.Text</item>
        <item name="android:textColor">#FF555555</item>
        <item name="android:textSize">16sp</item>
        <item name="android:divider">@drawable/custom_tab_indicator_divider</item>
        <item name="android:dividerPadding">5dp</item>
        <item name="android:showDividers">middle</item>
    </style>

    <style name="CustomTabPageIndicator.Text" parent="android:TextAppearance.Medium">
        <item name="android:typeface">monospace</item>
    </style>

    <style name="PopupWindowYAxisSlide" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/popup_slide_top_in</item>
        <item name="android:windowExitAnimation">@anim/popup_slide_top_out</item>
    </style>

    <style name="PopupWindowFade" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/popup_fade_in</item>
        <item name="android:windowExitAnimation">@anim/popup_fade_out</item>
    </style>

    <style name="CommentBarZoom" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/popup_zoom_in</item>
        <item name="android:windowExitAnimation">@anim/popup_zoom_out</item>
    </style>

    <style name="PopupWindowSlideFade" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/popup_fade_slide_bottom_in</item>
        <item name="android:windowExitAnimation">@anim/popup_fade_slide_bottom_out</item>
    </style>

    <style name="FragmentSlideRight" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/fragment_slide_right_enter</item>
        <item name="android:windowExitAnimation">@anim/fragment_slide_right_exit</item>
    </style>

    <style name="FragmentSlideLeft" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/fragment_slide_left_enter</item>
        <item name="android:windowExitAnimation">@anim/fragment_slide_left_exit</item>
    </style>

    <style name="FragmentFadeZoom" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/fragment_fade_zoom_out</item>
        <item name="android:windowExitAnimation">@anim/fragment_fade_zoom_in</item>
    </style>

    <style name="SlideChildLinear">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/slide_linear_height</item>
        <item name="android:background">@drawable/selector_slidemenu_item</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_marginRight">5dp</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="SlideImg">
        <item name="android:layout_width">@dimen/slide_img_side</item>
        <item name="android:layout_height">@dimen/slide_img_side</item>
        <item name="android:layout_gravity">center_vertical|right</item>
        <item name="android:gravity">right</item>
        <item name="android:scaleType">fitXY</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_toLeftOf">@+id/v_position</item>
        <item name="android:layout_marginRight">@dimen/slide_img_padding</item>
    </style>

    <style name="SlideTextView">
        <item name="android:layout_toRightOf">@+id/v_position</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical|left</item>
        <item name="android:paddingTop">1dip</item>
        <item name="android:shadowDx">0.2</item>
        <item name="android:shadowDy">0.0</item>
        <item name="android:layout_marginLeft">@dimen/slide_txt_margin</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:shadowRadius">0.2</item>
        <item name="android:textColor">@drawable/tab_text_selector</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="SlideUpdateHintTextView">
        <item name="android:visibility">gone</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">-5dp</item>
        <item name="android:layout_marginRight">-5dp</item>
        <item name="android:background">@drawable/round_corner_light_blue_update</item>
        <item name="android:textSize">11sp</item>
    </style>
    
    
    <style name="LineTweetIcon">
        <item name="android:layout_marginRight">3dp</item>
        <item name="android:layout_weight">1</item>
         <item name="android:layout_width">0dp</item>
         <item name="android:gravity">right</item>
         <item name="android:layout_height">wrap_content</item>
         <item name="android:textColor">#333333</item>
         <item name="android:textSize">13.0sp</item>
    </style>
    
     <style name="LineTweetText">
         <item name="android:layout_marginLeft">3dp</item>
        <item name="android:layout_weight">1</item>
         <item name="android:layout_width">0dp</item>
         <item name="android:gravity">left</item>
         <item name="android:layout_height">wrap_content</item>
         <item name="android:textColor">#777777</item>
         <item name="android:textSize">13.0sp</item>
    </style>
    
    <style name="ListViewTweet">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:fadeScrollbars">false</item>
        <item name="android:cacheColorHint">#00000000</item>
        <item name="android:fadingEdge">none</item>
        
        <item name="android:fadingEdgeLength">0.0dip</item>
        <item name="android:dividerHeight">0dip</item>
        <item name="android:divider">#00000000</item>
        <item name="android:fastScrollEnabled">true</item>
        <item name="android:listSelector">@drawable/tweet_content_list_bg_selector</item>
        
        <item name="android:background">#FFF5F5F5</item>
        <item name="android:longClickable">true</item>
    </style>
    
    <style name="SquareItem">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/square_item_height</item>
        <item name="android:padding">5dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:background">@drawable/bg_weibo_item</item>
    </style>
</resources>
