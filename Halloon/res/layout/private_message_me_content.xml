<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <com.halloon.android.widget.CircleImageView
        android:id="@+id/private_head"
        android:layout_width="@dimen/private_icon_side"
        android:layout_height="@dimen/private_icon_side"
        android:layout_alignParentRight="true"
        android:layout_marginRight="6.0dip"
        android:layout_below="@+id/private_time"
        android:src="@drawable/wb_head_default" />
    <!-- I don't what to do with this ImageView so I set the visibility invisible -->
    <ImageView
        android:layout_width="40.0dip"
        android:layout_height="40.0dip"
        android:visibility="invisible"
        android:layout_alignParentRight="true"
        android:layout_marginRight="6.0dip"
        android:layout_below="@+id/private_time"
        android:src="@drawable/avatar_mask" />
    
    <com.halloon.android.widget.ButtonStyleTextView 
        android:id="@+id/private_content"
        android:layout_below="@+id/private_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minHeight="40.0dip"
        android:layout_toLeftOf="@+id/private_head"
        android:layout_marginRight="8.0dip"
        android:layout_marginLeft="53.0dip"
        android:textColor="@color/txt_private"
        android:layout_marginTop="8.0dip"
        android:textSize="@dimen/txt_private_content"
        android:gravity="center|left"
        
        android:background="@drawable/bg_private_msg_me" />

<TextView
        android:id="@+id/private_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:textSize="@dimen/txt_private_time"
        android:textColor="@color/txt_private_time"
        android:background="@drawable/bg_private_time"
        android:layout_marginBottom="4dp"
        android:text="time" />
</RelativeLayout>