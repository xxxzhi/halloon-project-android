<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <com.halloon.android.widget.CircleImageView
        android:id="@+id/private_head"
        android:layout_width="40.0dip"
        android:layout_height="40.0dip"
        android:layout_marginLeft="6.0dip"
        android:layout_below="@+id/private_time"
        android:src="@drawable/wb_head_default"/>
    
    <ImageView
        android:id="@+id/head_mask"
        android:layout_below="@+id/private_time"
        android:layout_width="40.0dip"
        android:layout_height="40.0dip"
        android:visibility="invisible"
        android:layout_marginLeft="6.0dip"
        android:src="@drawable/avatar_mask" />
    
    <TextView
        android:id="@+id/private_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="4dp"
        android:textSize="@dimen/txt_private_time"
        android:textColor="@color/txt_private_time"
        android:background="@drawable/bg_private_time"
        android:text="time" />
    <com.halloon.android.widget.ButtonStyleTextView
        android:id="@+id/private_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minHeight="40.0dip"
        android:layout_toRightOf="@+id/private_head"
        android:layout_marginRight="53.0dip"
        android:layout_marginLeft="8.0dip"
        android:text="12312123123123123123124241242352314132412341234123412341"
        android:textColor="@color/txt_private"
        android:textSize="@dimen/txt_private_content"
        android:gravity="center|left"
        android:layout_below="@+id/private_time"
        android:background="@drawable/round_corner_dark" />


</RelativeLayout>